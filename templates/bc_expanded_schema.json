{
  "database_name": "British Columbia First Nations - Comprehensive Database",
  "description": "Complete database of Indigenous First Nations across all of British Columbia",
  "version": "2.0.0",
  "last_updated": "2025-01-01",
  "expansion_from": "Vancouver Island First Nations Database v1.0",
  "fields": {
    "nation_name": {
      "type": "title",
      "description": "Official name of the First Nation",
      "required": true,
      "example": "Tsawwassen First Nation"
    },
    "traditional_name": {
      "type": "text",
      "description": "Traditional name in Indigenous language",
      "required": false,
      "example": "sc̓əwaθən məsteyəxʷ"
    },
    "provincial_region": {
      "type": "select",
      "description": "Geographic region within BC",
      "required": true,
      "options": [
        "Vancouver Island",
        "Lower Mainland",
        "Fraser Valley",
        "Fraser Canyon",
        "Thompson River Valley",
        "Okanagan Valley",
        "Kootenay Region",
        "Central Interior",
        "Chilcotin Plateau",
        "Bulkley Valley",
        "Upper Skeena Valley",
        "Nass Valley",
        "Haida Gwaii",
        "Northwest Coast",
        "Northeast BC"
      ]
    },
    "cultural_group": {
      "type": "select",
      "description": "Major cultural/linguistic group",
      "required": true,
      "options": [
        "Coast Salish",
        "Interior Salish",
        "Nuu-chah-nulth",
        "Kwakwaka'wakw",
        "Athabaskan",
        "Tsimshian",
        "Haida",
        "Gitxsan",
        "Wet'suwet'en",
        "Nisga'a",
        "Ktunaxa",
        "Dakelh (Carrier)",
        "Tsilhqot'in",
        "Tahltan",
        "Other"
      ]
    },
    "language_family": {
      "type": "text",
      "description": "Language family and specific dialect",
      "required": false,
      "example": "Salishan - Hul'qumi'num"
    },
    "traditional_territory": {
      "type": "text",
      "description": "Description of traditional territory location",
      "required": true,
      "example": "Southern Vancouver Island, Gulf Islands"
    },
    "coordinates": {
      "type": "text",
      "description": "GPS coordinates of main community (if applicable)",
      "required": false,
      "format": "latitude, longitude",
      "example": "48.9447° N, 123.4993° W"
    },
    "official_website": {
      "type": "url",
      "description": "Official First Nation website",
      "required": false,
      "validation": "Must be valid URL"
    },
    "contact_email": {
      "type": "email",
      "description": "Public contact email",
      "required": false,
      "privacy": "Only public emails"
    },
    "contact_phone": {
      "type": "phone",
      "description": "Public contact phone number",
      "required": false,
      "privacy": "Only public numbers"
    },
    "population": {
      "type": "number",
      "description": "Registered population (if publicly available)",
      "required": false,
      "source": "Cite source and year"
    },
    "governance_type": {
      "type": "multi_select",
      "description": "Type of governance structure",
      "required": false,
      "options": [
        "Elected Chief and Council",
        "Hereditary Chiefs",
        "Traditional Governance",
        "Self-Government Agreement",
        "Treaty",
        "Mixed Governance",
        "Band Council",
        "Custom Election Code"
      ]
    },
    "chief_councillor": {
      "type": "text",
      "description": "Current elected Chief (if applicable)",
      "required": false,
      "privacy": "Only if publicly listed"
    },
    "hereditary_chiefs": {
      "type": "text",
      "description": "Hereditary leadership structure (if applicable)",
      "required": false,
      "privacy": "Only publicly acknowledged information"
    },
    "treaty_process_status": {
      "type": "select",
      "description": "Current status in treaty process",
      "required": false,
      "options": [
        "Douglas Treaty (1850s)",
        "Modern Treaty - Final Agreement",
        "Modern Treaty - Agreement in Principle",
        "Modern Treaty - Framework Agreement",
        "Modern Treaty - Negotiating",
        "Modern Treaty - Not Participating",
        "Self-Government Agreement",
        "Reconciliation Agreement",
        "Other Agreement",
        "No Treaty Process"
      ]
    },
    "self_government_status": {
      "type": "select",
      "description": "Level of self-government autonomy",
      "required": false,
      "options": [
        "Full Self-Government",
        "Partial Self-Government",
        "Self-Government Agreement",
        "Custom Election Code",
        "Indian Act Governance",
        "Mixed Governance",
        "Under Development"
      ]
    },
    "land_claims_status": {
      "type": "text",
      "description": "Current land claim status and details",
      "required": false,
      "max_length": 500
    },
    "history_overview": {
      "type": "rich_text",
      "description": "Brief historical overview",
      "required": false,
      "max_length": 1000,
      "guidelines": "Respectful, factual, from Indigenous perspective when available"
    },
    "cultural_highlights": {
      "type": "rich_text",
      "description": "Public cultural information",
      "required": false,
      "guidelines": "Only information Nations have made public"
    },
    "current_initiatives": {
      "type": "rich_text",
      "description": "Current programs, projects, and initiatives",
      "required": false,
      "examples": "Economic development, cultural programs, education"
    },
    "economic_development": {
      "type": "rich_text",
      "description": "Major business ventures and economic activities",
      "required": false,
      "examples": "Forestry, tourism, fisheries, retail, real estate"
    },
    "cultural_tourism": {
      "type": "rich_text",
      "description": "Public cultural tourism programs and opportunities",
      "required": false,
      "examples": "Cultural centers, guided tours, traditional crafts"
    },
    "language_revitalization": {
      "type": "rich_text",
      "description": "Current language preservation and revitalization programs",
      "required": false,
      "examples": "Language classes, immersion programs, cultural schools"
    },
    "traditional_governance": {
      "type": "rich_text",
      "description": "Traditional governance systems and practices",
      "required": false,
      "privacy": "Only publicly shared information"
    },
    "cultural_practices": {
      "type": "rich_text",
      "description": "Public cultural practices and traditions",
      "required": false,
      "guidelines": "Only information Nations have made public"
    },
    "resource_management": {
      "type": "rich_text",
      "description": "Traditional resource management practices",
      "required": false,
      "examples": "Fisheries management, forestry practices, land stewardship"
    },
    "treaties_agreements": {
      "type": "multi_select",
      "description": "Treaties and agreements",
      "required": false,
      "options": [
        "Douglas Treaty",
        "Modern Treaty",
        "Self-Government Agreement",
        "Reconciliation Agreement",
        "Economic Development Agreement",
        "Resource Sharing Agreement",
        "Other Agreement",
        "No Treaty"
      ]
    },
    "treaty_details": {
      "type": "text",
      "description": "Specific treaty information",
      "required": false
    },
    "resources_links": {
      "type": "rich_text",
      "description": "Additional resources and links",
      "required": false,
      "format": "Markdown links"
    },
    "data_sources": {
      "type": "rich_text",
      "description": "Sources for all information",
      "required": true,
      "format": "Citation format with dates"
    },
    "last_verified": {
      "type": "date",
      "description": "Date information was last verified",
      "required": true,
      "auto_update": false
    },
    "research_priority": {
      "type": "select",
      "description": "Research priority level",
      "required": true,
      "options": [
        "High Priority",
        "Medium Priority",
        "Low Priority",
        "Complete"
      ],
      "default": "Medium Priority"
    },
    "notes": {
      "type": "rich_text",
      "description": "Internal research notes",
      "required": false,
      "privacy": "Not for public sharing"
    },
    "status": {
      "type": "select",
      "description": "Research status",
      "required": true,
      "options": [
        "Not Started",
        "In Progress",
        "Needs Verification",
        "Complete",
        "Needs Update",
        "Under Review"
      ],
      "default": "Not Started"
    }
  },
  "views": {
    "by_provincial_region": {
      "type": "board",
      "group_by": "provincial_region"
    },
    "by_cultural_group": {
      "type": "board",
      "group_by": "cultural_group"
    },
    "by_treaty_status": {
      "type": "board",
      "group_by": "treaty_process_status"
    },
    "by_research_priority": {
      "type": "board",
      "group_by": "research_priority"
    },
    "by_status": {
      "type": "board",
      "group_by": "status"
    },
    "master_list": {
      "type": "table",
      "sort": "nation_name",
      "filters": []
    },
    "map_view": {
      "type": "map",
      "location_field": "coordinates"
    },
    "expansion_progress": {
      "type": "board",
      "group_by": "provincial_region",
      "filters": ["status:Complete"]
    }
  },
  "templates": {
    "new_nation": {
      "description": "Template for adding new First Nation",
      "prefilled_fields": {
        "status": "In Progress",
        "research_priority": "Medium Priority",
        "last_verified": "today"
      }
    },
    "vancouver_island_nation": {
      "description": "Template for Vancouver Island nations (existing data)",
      "prefilled_fields": {
        "status": "Complete",
        "provincial_region": "Vancouver Island",
        "research_priority": "Complete"
      }
    },
    "lower_mainland_nation": {
      "description": "Template for Lower Mainland nations",
      "prefilled_fields": {
        "status": "Not Started",
        "provincial_region": "Lower Mainland",
        "research_priority": "High Priority"
      }
    }
  },
  "validation_rules": {
    "required_fields": [
      "nation_name",
      "provincial_region",
      "cultural_group",
      "traditional_territory",
      "data_sources",
      "last_verified"
    ],
    "quality_checks": [
      "Source verification (minimum 2 sources)",
      "Cultural accuracy review",
      "Contact information verification",
      "Geographic accuracy"
    ]
  }
}
